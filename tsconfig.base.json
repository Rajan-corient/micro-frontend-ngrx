        "libs/shared/data-access/http-service/src/index.ts"
      ],
      "@ep-monorepo/shared/data-access/master-data": [
        "libs/shared/data-access/master-data/src/index.ts"
      ],
      "@ep-monorepo/shared/ui/input-control": [
        "libs/shared/ui/input-control/src/index.ts"
      ],
      "@ep-monorepo/shared/ui/search-control": [
        "libs/shared/ui/search-control/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
